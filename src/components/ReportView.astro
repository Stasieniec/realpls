---
// ReportView - The main analysis results view
// This is rendered client-side via JavaScript
---

<div class="report-view hidden" id="report-view">
  <!-- Report Header -->
  <div class="report-header">
    <div class="report-header-left">
      <button type="button" class="back-button" id="reset-button" aria-label="Go back to upload">
        <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M12 15L7 10L12 5" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
        New analysis
      </button>
    </div>
    
    <div class="report-header-right">
      <button type="button" class="action-button" id="download-button">
        <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M8 2V10M8 10L5 7M8 10L11 7" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
          <path d="M2 11V13C2 13.5523 2.44772 14 3 14H13C13.5523 14 14 13.5523 14 13V11" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
        Download JSON
      </button>
    </div>
  </div>
  
  <!-- Summary Banner -->
  <div class="summary-banner" id="summary-banner">
    <div class="summary-icon" id="summary-icon"></div>
    <div class="summary-content">
      <h2 class="summary-title" id="summary-title">Analyzing...</h2>
      <p class="summary-subtitle" id="summary-subtitle"></p>
    </div>
    <div class="summary-stats" id="summary-stats"></div>
  </div>
  
  <!-- Progress (shown during analysis) -->
  <div class="analysis-progress" id="analysis-progress">
    <div class="progress-bar">
      <div class="progress-fill" id="progress-fill"></div>
    </div>
    <p class="progress-text" id="progress-text">Starting analysis...</p>
  </div>
  
  <!-- Main Content Area -->
  <div class="report-content" id="report-content">
    <!-- Left Column: Image Preview -->
    <div class="preview-column">
      <div class="preview-card">
        <div class="preview-image-container" id="preview-container">
          <img id="preview-image" alt="Uploaded image preview" />
          <canvas id="overlay-canvas" class="overlay-canvas hidden"></canvas>
        </div>
        
        <div class="preview-info" id="preview-info">
          <span class="filename" id="filename"></span>
          <span class="file-meta" id="file-meta"></span>
        </div>
        
        <div class="overlay-controls hidden" id="overlay-controls">
          <label class="overlay-label">Overlay:</label>
          <select id="overlay-select" class="overlay-select">
            <option value="none">None</option>
          </select>
          <div class="opacity-control">
            <label for="opacity-slider">Opacity:</label>
            <input type="range" id="opacity-slider" min="0" max="100" value="50" />
          </div>
        </div>
      </div>
    </div>
    
    <!-- Right Column: Tabs & Checks -->
    <div class="checks-column">
      <div class="tabs" role="tablist" aria-label="Report sections">
        <button class="tab active" role="tab" aria-selected="true" data-tab="overview">
          Overview
        </button>
        <button class="tab" role="tab" aria-selected="false" data-tab="metadata">
          Metadata
        </button>
        <button class="tab" role="tab" aria-selected="false" data-tab="forensics">
          Forensics
        </button>
        <button class="tab" role="tab" aria-selected="false" data-tab="visualize">
          Visualize
        </button>
      </div>
      
      <div class="tab-content" id="tab-content">
        <!-- Content populated by JavaScript -->
      </div>
    </div>
  </div>
</div>

<style>
  .report-view {
    display: flex;
    flex-direction: column;
    gap: var(--space-6);
  }
  
  .report-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: var(--space-4);
  }
  
  .back-button {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-2) var(--space-3);
    font-size: var(--text-sm);
    font-weight: 500;
    color: var(--color-text-secondary);
    background: transparent;
    border: none;
    border-radius: var(--radius-md);
    cursor: pointer;
    transition: all var(--transition-fast);
  }
  
  .back-button:hover {
    color: var(--color-text);
    background: var(--color-bg-subtle);
  }
  
  .action-button {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-2) var(--space-4);
    font-size: var(--text-sm);
    font-weight: 500;
    color: var(--color-text);
    background: var(--color-bg-elevated);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    cursor: pointer;
    transition: all var(--transition-fast);
  }
  
  .action-button:hover {
    background: var(--color-bg-subtle);
    border-color: var(--color-border-subtle);
  }
  
  /* Summary Banner */
  .summary-banner {
    display: flex;
    align-items: center;
    gap: var(--space-4);
    padding: var(--space-5);
    background: var(--color-bg-elevated);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
  }
  
  .summary-banner.status-clean {
    border-color: var(--color-ok);
    background: var(--color-ok-bg);
  }
  
  .summary-banner.status-review {
    border-color: var(--color-warn);
    background: var(--color-warn-bg);
  }
  
  .summary-banner.status-suspicious {
    border-color: var(--color-fail);
    background: var(--color-fail-bg);
  }
  
  .summary-icon {
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: var(--radius-full);
    flex-shrink: 0;
  }
  
  .summary-content {
    flex: 1;
    min-width: 0;
  }
  
  .summary-title {
    font-size: var(--text-lg);
    font-weight: 600;
    margin-bottom: var(--space-1);
  }
  
  .summary-subtitle {
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
    margin: 0;
  }
  
  .summary-stats {
    display: flex;
    gap: var(--space-4);
    flex-shrink: 0;
  }
  
  .stat-item {
    text-align: center;
  }
  
  .stat-value {
    font-size: var(--text-2xl);
    font-weight: 600;
    font-family: var(--font-mono);
  }
  
  .stat-label {
    font-size: var(--text-xs);
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  
  /* Progress */
  .analysis-progress {
    text-align: center;
    padding: var(--space-8);
  }
  
  .progress-bar {
    height: 4px;
    background: var(--color-bg-muted);
    border-radius: var(--radius-full);
    overflow: hidden;
    margin-bottom: var(--space-4);
    max-width: 400px;
    margin-inline: auto;
  }
  
  .progress-fill {
    height: 100%;
    background: var(--color-accent);
    border-radius: var(--radius-full);
    transition: width var(--transition-normal);
    width: 0%;
  }
  
  .progress-text {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
  }
  
  /* Main Content */
  .report-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-6);
  }
  
  @media (max-width: 900px) {
    .report-content {
      grid-template-columns: 1fr;
    }
  }
  
  /* Preview Column */
  .preview-card {
    background: var(--color-bg-elevated);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    overflow: hidden;
  }
  
  .preview-image-container {
    position: relative;
    background: var(--color-bg-subtle);
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 300px;
    max-height: 500px;
    overflow: hidden;
  }
  
  #preview-image {
    max-width: 100%;
    max-height: 500px;
    object-fit: contain;
  }
  
  .overlay-canvas {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    pointer-events: none;
    mix-blend-mode: multiply;
  }
  
  .preview-info {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: var(--space-3) var(--space-4);
    border-top: 1px solid var(--color-border);
  }
  
  .filename {
    font-size: var(--text-sm);
    font-weight: 500;
    color: var(--color-text);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    max-width: 200px;
  }
  
  .file-meta {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    font-family: var(--font-mono);
  }
  
  .overlay-controls {
    display: flex;
    align-items: center;
    gap: var(--space-4);
    padding: var(--space-3) var(--space-4);
    border-top: 1px solid var(--color-border);
    background: var(--color-bg-subtle);
  }
  
  .overlay-label {
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
  }
  
  .overlay-select {
    padding: var(--space-1) var(--space-2);
    font-size: var(--text-sm);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-sm);
    background: var(--color-bg-elevated);
    color: var(--color-text);
  }
  
  .opacity-control {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    margin-left: auto;
  }
  
  .opacity-control label {
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
  }
  
  .opacity-control input[type="range"] {
    width: 100px;
    accent-color: var(--color-accent);
  }
  
  /* Tabs */
  .tabs {
    display: flex;
    border-bottom: 1px solid var(--color-border);
    margin-bottom: var(--space-4);
    overflow-x: auto;
  }
  
  .tab {
    padding: var(--space-3) var(--space-4);
    font-size: var(--text-sm);
    font-weight: 500;
    color: var(--color-text-muted);
    background: transparent;
    border: none;
    border-bottom: 2px solid transparent;
    cursor: pointer;
    transition: all var(--transition-fast);
    white-space: nowrap;
  }
  
  .tab:hover {
    color: var(--color-text-secondary);
  }
  
  .tab.active {
    color: var(--color-accent);
    border-bottom-color: var(--color-accent);
  }
  
  .tab-content {
    min-height: 400px;
  }
  
  /* Check Cards */
  .check-card {
    background: var(--color-bg-elevated);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    margin-bottom: var(--space-3);
    overflow: hidden;
  }
  
  .check-header {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    padding: var(--space-3) var(--space-4);
    cursor: pointer;
    transition: background var(--transition-fast);
  }
  
  .check-header:hover {
    background: var(--color-bg-subtle);
  }
  
  .check-badge {
    flex-shrink: 0;
  }
  
  .check-info {
    flex: 1;
    min-width: 0;
  }
  
  .check-name {
    font-size: var(--text-sm);
    font-weight: 500;
    color: var(--color-text);
    margin-bottom: var(--space-1);
  }
  
  .check-summary {
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }
  
  .check-expand {
    color: var(--color-text-muted);
    transition: transform var(--transition-fast);
    flex-shrink: 0;
  }
  
  .check-card.expanded .check-expand {
    transform: rotate(180deg);
  }
  
  .check-details {
    padding: var(--space-4);
    border-top: 1px solid var(--color-border);
    background: var(--color-bg-subtle);
    display: none;
  }
  
  .check-card.expanded .check-details {
    display: block;
  }
  
  .check-notes {
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
    line-height: var(--leading-relaxed);
    margin-top: var(--space-3);
    padding: var(--space-3);
    background: var(--color-bg-elevated);
    border-radius: var(--radius-sm);
    white-space: pre-wrap;
  }
  
  .confidence-bar {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    margin-top: var(--space-3);
  }
  
  .confidence-bar label {
    font-size: var(--text-xs);
    color: var(--color-text-muted);
  }
  
  .confidence-track {
    flex: 1;
    height: 4px;
    background: var(--color-bg-muted);
    border-radius: var(--radius-full);
    overflow: hidden;
  }
  
  .confidence-fill {
    height: 100%;
    background: var(--color-accent);
    border-radius: var(--radius-full);
  }
  
  .confidence-value {
    font-size: var(--text-xs);
    font-family: var(--font-mono);
    color: var(--color-text-muted);
  }
  
  /* Empty state */
  .empty-state {
    text-align: center;
    padding: var(--space-10);
    color: var(--color-text-muted);
  }
  
  .empty-state svg {
    margin-bottom: var(--space-4);
    opacity: 0.5;
  }
  
  .hidden {
    display: none !important;
  }
</style>

