---
// ReportView - The main analysis results view
---

<div class="report-view hidden" id="report-view">
  <!-- Report Header -->
  <div class="report-header">
    <button type="button" class="back-button" id="reset-button" aria-label="Go back to upload">
      ‚Üê new analysis
    </button>
    <button type="button" class="action-button" id="download-button">
      download json
    </button>
  </div>
  
  <!-- Top Section: Image + Summary side by side -->
  <div class="top-section">
    <!-- Image Preview -->
    <div class="preview-card">
      <div class="preview-image-container" id="preview-container">
        <img id="preview-image" alt="Uploaded image preview" />
        <canvas id="overlay-canvas" class="overlay-canvas hidden"></canvas>
        <button type="button" class="maximize-button" id="maximize-button" title="Maximize image">
          <svg width="16" height="16" viewBox="0 0 16 16" fill="none">
            <path d="M2 2H6M2 2V6M2 2L6 6M14 2H10M14 2V6M14 2L10 6M2 14H6M2 14V10M2 14L6 10M14 14H10M14 14V10M14 14L10 10" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
          </svg>
        </button>
      </div>
      
      <div class="preview-info" id="preview-info">
        <span class="filename" id="filename"></span>
        <span class="file-meta" id="file-meta"></span>
      </div>
      
      <div class="overlay-controls hidden" id="overlay-controls">
        <div class="overlay-row">
          <label class="overlay-label">overlay</label>
          <select id="overlay-select" class="overlay-select">
            <option value="none">none</option>
          </select>
        </div>
        <div class="overlay-row">
          <label for="opacity-slider">opacity</label>
          <input type="range" id="opacity-slider" min="0" max="100" value="50" />
        </div>
      </div>
    </div>
    
    <!-- Summary Card -->
    <div class="summary-card">
      <div class="summary-banner" id="summary-banner">
        <h2 class="summary-title" id="summary-title">analyzing...</h2>
        <p class="summary-subtitle" id="summary-subtitle"></p>
      </div>
      
      <div class="summary-stats" id="summary-stats"></div>
      
      <div class="quick-findings" id="quick-findings">
        <!-- Populated by JS -->
      </div>
    </div>
  </div>
  
  <!-- Progress (shown during analysis) -->
  <div class="analysis-progress" id="analysis-progress">
    <div class="progress-bar">
      <div class="progress-fill" id="progress-fill"></div>
    </div>
    <p class="progress-text" id="progress-text">starting analysis...</p>
  </div>
  
  <!-- Bottom Section: Full-width Tabs & Checks -->
  <div class="bottom-section" id="bottom-section">
    <div class="tabs" role="tablist" aria-label="Report sections">
      <button class="tab active" role="tab" aria-selected="true" data-tab="overview">
        overview
      </button>
      <button class="tab" role="tab" aria-selected="false" data-tab="metadata">
        metadata
      </button>
      <button class="tab" role="tab" aria-selected="false" data-tab="forensics">
        forensics
      </button>
      <button class="tab" role="tab" aria-selected="false" data-tab="visualize">
        visualize
      </button>
    </div>
    
    <div class="tab-content" id="tab-content">
      <!-- Content populated by JavaScript -->
    </div>
  </div>
  
  <!-- Fullscreen Image Modal -->
  <div class="image-modal hidden" id="image-modal">
    <div class="modal-header">
      <div class="modal-title" id="modal-title">image viewer</div>
      <button type="button" class="modal-close" id="modal-close" title="Close">
        <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
          <path d="M5 5L15 15M5 15L15 5" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
        </svg>
      </button>
    </div>
    
    <div class="modal-content">
      <div class="modal-image-container">
        <img id="modal-image" alt="Full size image" />
        <canvas id="modal-overlay-canvas" class="overlay-canvas hidden"></canvas>
      </div>
    </div>
    
    <div class="modal-controls">
      <div class="modal-control-row">
        <label>overlay</label>
        <select id="modal-overlay-select" class="modal-select">
          <option value="none">none</option>
        </select>
      </div>
      <div class="modal-control-row">
        <label for="modal-opacity-slider">opacity</label>
        <input type="range" id="modal-opacity-slider" min="0" max="100" value="60" />
        <span id="modal-opacity-value" class="opacity-value">60%</span>
      </div>
    </div>
  </div>
</div>

<style>
  .report-view {
    display: flex;
    flex-direction: column;
    gap: var(--space-6);
  }
  
  /* Header */
  .report-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: var(--space-4);
  }
  
  .back-button {
    padding: var(--space-2) 0;
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    background: transparent;
    border: none;
    cursor: pointer;
    transition: color var(--transition-fast);
  }
  
  .back-button:hover {
    color: var(--color-text);
  }
  
  .action-button {
    padding: var(--space-2) var(--space-4);
    font-size: var(--text-sm);
    color: var(--color-text);
    background: transparent;
    border: 1px solid var(--color-border);
    cursor: pointer;
    transition: all var(--transition-fast);
  }
  
  .action-button:hover {
    border-color: var(--color-text-muted);
  }
  
  /* Top Section - Side by Side */
  .top-section {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-6);
  }
  
  @media (max-width: 800px) {
    .top-section {
      grid-template-columns: 1fr;
    }
  }
  
  /* Preview Card */
  .preview-card {
    border: 1px solid var(--color-border);
    background: var(--color-bg);
    overflow: hidden;
  }
  
  .preview-image-container {
    position: relative;
    background: var(--color-bg-subtle);
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 200px;
    max-height: 350px;
    overflow: hidden;
  }
  
  #preview-image {
    max-width: 100%;
    max-height: 350px;
    object-fit: contain;
  }
  
  .overlay-canvas {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    pointer-events: none;
    mix-blend-mode: screen;
  }
  
  .maximize-button {
    position: absolute;
    top: var(--space-2);
    right: var(--space-2);
    padding: var(--space-2);
    background: rgba(0, 0, 0, 0.6);
    border: 1px solid var(--color-border);
    color: var(--color-text);
    cursor: pointer;
    opacity: 0;
    transition: all var(--transition-fast);
    z-index: 10;
  }
  
  .preview-image-container:hover .maximize-button {
    opacity: 1;
  }
  
  .maximize-button:hover {
    background: rgba(0, 0, 0, 0.8);
    border-color: var(--color-text-muted);
  }
  
  .preview-info {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: var(--space-3) var(--space-4);
    border-top: 1px solid var(--color-border);
  }
  
  .filename {
    font-size: var(--text-sm);
    color: var(--color-text);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    max-width: 180px;
  }
  
  .file-meta {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    font-family: var(--font-mono);
  }
  
  .overlay-controls {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
    padding: var(--space-3) var(--space-4);
    border-top: 1px solid var(--color-border);
    background: var(--color-bg-subtle);
  }
  
  .overlay-row {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--space-4);
  }
  
  .overlay-label,
  .overlay-row label {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
  }
  
  .overlay-select {
    padding: var(--space-1) var(--space-2);
    font-size: var(--text-sm);
    border: 1px solid var(--color-border);
    background: var(--color-bg);
    color: var(--color-text);
  }
  
  .overlay-row input[type="range"] {
    width: 100px;
    accent-color: var(--color-text);
  }
  
  /* Summary Card */
  .summary-card {
    border: 1px solid var(--color-border);
    background: var(--color-bg);
    display: flex;
    flex-direction: column;
  }
  
  .summary-banner {
    padding: var(--space-5);
    border-bottom: 1px solid var(--color-border);
  }
  
  .summary-banner.status-clean {
    border-left: 3px solid var(--color-ok);
  }
  
  .summary-banner.status-review {
    border-left: 3px solid var(--color-warn);
  }
  
  .summary-banner.status-suspicious {
    border-left: 3px solid var(--color-fail);
  }
  
  .summary-title {
    font-size: var(--text-lg);
    font-weight: 500;
    margin-bottom: var(--space-1);
  }
  
  .summary-subtitle {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    margin: 0;
  }
  
  .summary-stats {
    display: flex;
    gap: var(--space-1);
    padding: var(--space-4);
    border-bottom: 1px solid var(--color-border);
  }
  
  .stat-item {
    flex: 1;
    text-align: center;
    padding: var(--space-3);
    background: var(--color-bg-subtle);
  }
  
  .stat-value {
    font-size: var(--text-xl);
    font-weight: 500;
    font-family: var(--font-mono);
  }
  
  .stat-label {
    font-size: var(--text-xs);
    color: var(--color-text-muted);
    text-transform: lowercase;
    margin-top: var(--space-1);
  }
  
  .quick-findings {
    flex: 1;
    padding: var(--space-4);
    overflow-y: auto;
    max-height: 200px;
  }
  
  .quick-finding {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    padding: var(--space-2) 0;
    border-bottom: 1px solid var(--color-border);
    font-size: var(--text-sm);
  }
  
  .quick-finding:last-child {
    border-bottom: none;
  }
  
  .quick-finding-status {
    font-size: var(--text-xs);
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    flex-shrink: 0;
    width: 40px;
  }
  
  .quick-finding-text {
    color: var(--color-text-secondary);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }
  
  /* Progress */
  .analysis-progress {
    text-align: center;
    padding: var(--space-8);
  }
  
  .progress-bar {
    height: 1px;
    background: var(--color-border);
    margin-bottom: var(--space-4);
    max-width: 300px;
    margin-inline: auto;
  }
  
  .progress-fill {
    height: 100%;
    background: var(--color-text);
    transition: width var(--transition-normal);
    width: 0%;
  }
  
  .progress-text {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
  }
  
  /* Bottom Section - Full Width */
  .bottom-section {
    border: 1px solid var(--color-border);
    background: var(--color-bg);
  }
  
  /* Tabs */
  .tabs {
    display: flex;
    gap: var(--space-1);
    padding: 0 var(--space-4);
    border-bottom: 1px solid var(--color-border);
    overflow-x: auto;
  }
  
  .tab {
    padding: var(--space-3) var(--space-4);
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    background: transparent;
    border: none;
    border-bottom: 1px solid transparent;
    margin-bottom: -1px;
    cursor: pointer;
    transition: all var(--transition-fast);
    white-space: nowrap;
  }
  
  .tab:hover {
    color: var(--color-text-secondary);
  }
  
  .tab.active {
    color: var(--color-text);
    border-bottom-color: var(--color-text);
  }
  
  .tab-content {
    padding: var(--space-5);
    min-height: 300px;
  }
  
  /* Check Cards - Grid Layout */
  .checks-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: var(--space-3);
  }
  
  @media (max-width: 600px) {
    .checks-grid {
      grid-template-columns: 1fr;
    }
  }
  
  .check-card {
    border: 1px solid var(--color-border);
    background: var(--color-bg-subtle);
    overflow: hidden;
  }
  
  .check-header {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    padding: var(--space-3) var(--space-4);
    cursor: pointer;
    transition: background var(--transition-fast);
  }
  
  .check-header:hover {
    background: var(--color-bg-muted);
  }
  
  .check-badge {
    flex-shrink: 0;
  }
  
  .check-info {
    flex: 1;
    min-width: 0;
  }
  
  .check-name {
    font-size: var(--text-sm);
    font-weight: 500;
    color: var(--color-text);
    margin-bottom: 2px;
  }
  
  .check-summary {
    font-size: var(--text-xs);
    color: var(--color-text-muted);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }
  
  .check-expand {
    color: var(--color-text-muted);
    transition: transform var(--transition-fast);
    flex-shrink: 0;
  }
  
  .check-card.expanded .check-expand {
    transform: rotate(180deg);
  }
  
  .check-details {
    padding: var(--space-4);
    border-top: 1px solid var(--color-border);
    background: var(--color-bg);
    display: none;
  }
  
  .check-card.expanded .check-details {
    display: block;
  }
  
  .check-notes {
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
    line-height: var(--leading-relaxed);
    margin-top: var(--space-3);
    padding: var(--space-3);
    background: var(--color-bg-subtle);
    border: 1px solid var(--color-border);
    white-space: pre-wrap;
  }
  
  .confidence-bar {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    margin-top: var(--space-3);
  }
  
  .confidence-bar label {
    font-size: var(--text-xs);
    color: var(--color-text-muted);
  }
  
  .confidence-track {
    flex: 1;
    height: 2px;
    background: var(--color-border);
    overflow: hidden;
  }
  
  .confidence-fill {
    height: 100%;
    background: var(--color-text-muted);
  }
  
  .confidence-value {
    font-size: var(--text-xs);
    font-family: var(--font-mono);
    color: var(--color-text-muted);
  }
  
  /* Section headers */
  .section-title {
    font-size: var(--text-sm);
    font-weight: 500;
    color: var(--color-text-muted);
    margin-bottom: var(--space-4);
    text-transform: lowercase;
  }
  
  /* Empty state */
  .empty-state {
    text-align: center;
    padding: var(--space-10);
    color: var(--color-text-muted);
  }
  
  /* Image Modal */
  .image-modal {
    position: fixed;
    inset: 0;
    background: rgba(0, 0, 0, 0.95);
    z-index: 1000;
    display: flex;
    flex-direction: column;
  }
  
  .modal-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: var(--space-4) var(--space-6);
    border-bottom: 1px solid var(--color-border);
  }
  
  .modal-title {
    font-size: var(--text-base);
    color: var(--color-text);
  }
  
  .modal-close {
    padding: var(--space-2);
    background: transparent;
    border: 1px solid var(--color-border);
    color: var(--color-text);
    cursor: pointer;
    transition: all var(--transition-fast);
  }
  
  .modal-close:hover {
    border-color: var(--color-text-muted);
    background: var(--color-bg-subtle);
  }
  
  .modal-content {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: var(--space-6);
    overflow: hidden;
  }
  
  .modal-image-container {
    position: relative;
    max-width: 100%;
    max-height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  #modal-image {
    max-width: 100%;
    max-height: calc(100vh - 200px);
    object-fit: contain;
  }
  
  #modal-overlay-canvas {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    pointer-events: none;
    mix-blend-mode: screen;
  }
  
  .modal-controls {
    display: flex;
    gap: var(--space-6);
    padding: var(--space-4) var(--space-6);
    border-top: 1px solid var(--color-border);
    background: var(--color-bg);
  }
  
  @media (max-width: 600px) {
    .modal-controls {
      flex-direction: column;
      gap: var(--space-3);
    }
  }
  
  .modal-control-row {
    display: flex;
    align-items: center;
    gap: var(--space-3);
  }
  
  .modal-control-row label {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    min-width: 60px;
  }
  
  .modal-select {
    padding: var(--space-2) var(--space-3);
    font-size: var(--text-sm);
    border: 1px solid var(--color-border);
    background: var(--color-bg-subtle);
    color: var(--color-text);
    min-width: 200px;
  }
  
  .modal-control-row input[type="range"] {
    width: 200px;
    accent-color: var(--color-text);
  }
  
  .opacity-value {
    font-size: var(--text-sm);
    font-family: var(--font-mono);
    color: var(--color-text-muted);
    min-width: 40px;
  }
  
  .hidden {
    display: none !important;
  }
</style>
