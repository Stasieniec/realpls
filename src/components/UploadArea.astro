---
// UploadArea - Client-side interactive component
---

<div class="upload-area" id="upload-area">
  <input 
    type="file" 
    id="file-input" 
    accept="image/jpeg,image/png,image/gif,image/webp,.jpg,.jpeg,.png,.gif,.webp"
    class="file-input"
    aria-describedby="upload-description"
  />
  
  <div class="upload-content">
    <p class="upload-title">drop image here</p>
    <p class="upload-subtitle" id="upload-description">or</p>
    
    <div class="upload-actions">
      <button type="button" class="select-button" id="select-button">
        select image
      </button>
    </div>
  </div>
  
  <div class="upload-loading hidden" id="upload-loading">
    <div class="spinner"></div>
    <p>loading...</p>
  </div>
</div>

<style>
  .upload-area {
    position: relative;
    border: 1px solid var(--color-border);
    padding: var(--space-16) var(--space-6);
    text-align: center;
    transition: all var(--transition-normal);
    background: var(--color-bg);
  }
  
  .upload-area.dragover {
    border-color: var(--color-text-muted);
    background: var(--color-bg-muted);
  }
  
  .file-input {
    display: none;
  }
  
  .upload-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-3);
  }
  
  .upload-title {
    font-size: var(--text-lg);
    font-weight: 400;
    color: var(--color-text);
    letter-spacing: -0.01em;
  }
  
  .upload-subtitle {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
  }
  
  .select-button {
    padding: var(--space-3) var(--space-6);
    font-size: var(--text-base);
    color: var(--color-text);
    background: var(--color-bg);
    border: 1px solid var(--color-border);
    cursor: pointer;
    transition: all var(--transition-fast);
    position: relative;
    z-index: 10;
  }
  
  .select-button:hover {
    background: var(--color-bg-subtle);
    border-color: var(--color-text-muted);
  }
  
  .upload-actions {
    position: relative;
    z-index: 10;
    margin-top: var(--space-4);
    pointer-events: auto;
  }
  
  .upload-loading {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-3);
  }
  
  .upload-loading p {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
  }
  
  .spinner {
    width: 20px;
    height: 20px;
    border: 1px solid var(--color-border);
    border-top-color: var(--color-text);
    border-radius: 50%;
    animation: spin 0.8s linear infinite;
  }
  
  @keyframes spin {
    to { transform: rotate(360deg); }
  }
  
  .hidden {
    display: none !important;
  }
</style>
